{
  "name": "api",
  "version": "1.0.0",
  "description": "API REST using NodeJS and Express, Typescript, Mongoose. Middlewares JWT, CORS and Winston Logger.",
  "main": "dist/start.js",
  "author": "Wendel G Santana",
  "license": "MIT",
  "scripts": {
    "start": "\"yarn build\" && node build/index.js",
    "watch:server": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node src/start.ts",
    "start:dev": "nodemon --exec \"yarn start\"",
    "serve": "node dist/start.js",
    "test": "jest --no-cache --watchAll",
    "test:watch": "nodemon --watch --exec \"yarn test\"",
    "coverage": "nyc --check-coverage --lines 80 --per-file --all --reporter html --reporter lcov --reporter text \"yarn test\"",
    "dev:coverage": "nyc --all --reporter html --reporter text --reporter lcov \"yarn test\"",
    "tdd": "mocha --recursive --watch src/**/*.test.ts",
    "type:check": "tsc --noEmit",
    "type:watch": "\"yarn type-check\" --watch",
    "build": "\"yarn clean\" && rimraf ./dist && \"yarn type-check\"",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
    "clean": "rm -rf dist",
    "heroku:postbuild": "\"yarn post-build\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-request-id": "^1.4.1",
    "helmet": "^3.23.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.22",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/node": "^7.10.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/express-request-id": "^1.4.1",
    "@types/helmet": "^0.0.47",
    "@types/jest": "^26.0.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.30",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "jest": "^26.1.0",
    "jest-mock-extended": "^1.0.9",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "sucrase": "^3.15.0",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  }
}
